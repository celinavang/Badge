
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Badge</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Badge.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Signika:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/5af49ac99a.js" crossorigin="anonymous"></script>


</head>
<body>
    <script>
        function openNav() {
            document.getElementById("l-navbar").className = "l-navbar";
            document.getElementById("closebtn").onclick = closeNav;
        }
        function closeNav() {
            document.getElementById("l-navbar").className = "l-navbar-collapsed";
            document.getElementById("closebtn").onclick = openNav;
        }
    </script>
        <nav class="l-navbar" id="l-navbar">
            <div class="navbar-inner">
                <div class="navbar-logo"><a asp-area="" asp-page="/Index"><img style="width:45px; height:45px;" src="~/images/logo.png" />Badge</a>
                @* <a href="javascript:void(0)" id="closebtn" onclick="closeNav()">close</a> *@
                    </div>
            
                <div>
                    <ul class="l-nav-container">
                        <li class="l-nav-item @(Accessor.HttpContext.Request.Path.Value == "/Admin/Index" ? "nav-item-active" : "" )">
                            <a asp-area="" asp-page="/Admin/Index"> Dashboard</a>

                        </li>
                    <li class="l-nav-item @(Accessor.HttpContext.Request.Path.Value == "/Admin/Brugere" ? "nav-item-active" : "" )">
                        <a asp-area="" asp-page="/Admin/Brugere/Index">Brugere</a>
                    </li>
                    <li class="l-nav-item @(Accessor.HttpContext.Request.Path.Value == "/Admin/Grupper" ? "nav-item-active" : "" )">
                        <a asp-area="" asp-page="/Admin/Grupper/Index">Grupper</a>
                        </li>
                    <li class="l-nav-item @(Accessor.HttpContext.Request.Path.Value == "/Admin/Medlem" ? "nav-item-active" : "" )">
                        <a asp-area="" asp-page="/Admin/Medlem/Index">Medlemmer</a>
                        </li>
                    <li class="l-nav-item @(Accessor.HttpContext.Request.Path.Value == "/Admin/Foraeldre" ? "nav-item-active" : "" )">
                        <a asp-area="" asp-page="/Admin/Foraeldre/Index">Forældre</a>
                        </li>
                    <li class="l-nav-item @(Accessor.HttpContext.Request.Path.Value == "/Admin/Lodsedler" ? "nav-item-active" : "" )">
                        <a asp-area="" asp-page="/Admin/Lodsedler/Index">Lodsedler</a>
                        </li>
                    <li class="l-nav-item @(Accessor.HttpContext.Request.Path.Value == "/Admin/Salg" ? "nav-item-active" : "" )">
                        <a asp-area="" asp-page="/Admin/Salg/Index">Salg</a>
                        </li>
                    <li class="l-nav-item @(Accessor.HttpContext.Request.Path.Value == "/Admin/Statistikker" ? "nav-item-active" : "" )">
                        <a asp-area="" asp-page="/Admin/Statistikker/Index">Statistikker</a>
                    </li>
                    
                        
                    </ul>
                    
                </div>
                <div class="navbar-login"><partial name="_LoginPartial" /></div>
            </div>
        </nav>
    
    <div class="main-container">
        <main role="main" class="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
