<!DOCTYPE html>
<html lang="en" style="width: 100%;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Badge</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Badge.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Signika:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/5af49ac99a.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container" style="width: 100%;">
        <div class="d-flex align-content-center" style="width: 40%; margin: auto; ">
            <main role="main" style="width: 100%; margin:auto;">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <div id="footer-b">
        <div class="navbar-login"><partial name="./_footercontent.cshtml" /></div>
    </div>
</body>
</html>