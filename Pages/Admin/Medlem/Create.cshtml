@page
@model Badge.Pages.Admin.MemberAdmin.CreateModel

@{
    ViewData["Title"] = "Opret";

}

    <h1>Opret</h1>
<h4>Medlem</h4>
    <div class="index-content" style="width:100%;">
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Member.User.FName" class="control-label"></label>
                    <input asp-for="Member.User.FName" class="form-control" />
                    <span asp-validation-for="Member.User.FName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Member.User.LName" class="control-label"></label>
                    <input asp-for="Member.User.LName" class="form-control" />
                    <span asp-validation-for="Member.User.LName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Member.User.Email" class="control-label"></label>
                    <input asp-for="Member.User.Email" class="form-control" />
                    <span asp-validation-for="Member.User.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Member.Group" class="control-label"></label>
                    <select asp-for="Member.GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Opret" class="btn-def btn-full" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Tilbage til liste</a>
    </div>
    </div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
