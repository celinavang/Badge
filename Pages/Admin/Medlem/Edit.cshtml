@page
@model Badge.Pages.Admin.MemberAdmin.EditModel

@{
    ViewData["Title"] = "Rediger";
}

<h1>Rediger</h1>

<h4>Medlem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FName" class="control-label"></label>
                <input asp-for="Input.FName" class="form-control" />
                <span asp-validation-for="Input.FName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LName" class="control-label"></label>
                <input asp-for="Input.LName" class="form-control" />
                <span asp-validation-for="Input.LName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.GroupId" class="control-label"></label>
                <select asp-for="Input.GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>
                <span asp-validation-for="Input.GroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Gem" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Tilbage til liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
