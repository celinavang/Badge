@page
@model Badge.Pages.Administration.Forældre.IndexModel

@{
    ViewData["Title"] = "Forældre";
}

<h1>Forældre</h1>

<p>
    <a asp-page="Create">Opret ny</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Parent[0].Member)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent[0].FName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent[0].LName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Parent) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Member.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Rediger</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detajler</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Slet</a>
            </td>
        </tr>
}
    </tbody>
</table>
