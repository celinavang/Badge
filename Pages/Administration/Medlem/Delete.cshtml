@page
@model Badge.Pages.Administration.Member.DeleteModel

@{
    ViewData["Title"] = "Slet";
}

<h1>Slet</h1>

<h3>Er du sikker på, at du vil slette dette medlem?</h3>
<div>
    <h4>Medlem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.FName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.FName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.LName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.LName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.Group)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.Group.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Member.Id" />
        <input type="submit" value="Slet" class="btn btn-danger" /> |
        <a asp-page="./Index">Tilbage til liste</a>
    </form>
</div>
