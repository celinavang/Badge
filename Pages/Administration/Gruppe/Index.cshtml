@page
@model Badge.Pages.Administration.GroupAdmin.IndexModel

@{
    ViewData["Title"] = "Gruppe";
}

<h1>Gruppe</h1>

<p>
    <a asp-page="Create">Opret ny</a>
</p>

<form asp-page="./Index" method="get">
    <div class="form-actions no color">
        <p>
            Søg på gruppenavn:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" />
            <a asp-page="./Index">Tilbage til liste</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.GroupNameSort"
                asp-route-currentFilter="@Model.CurrentFilter">
                @Html.DisplayNameFor(model => model.Groups[0].Name)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.GroupIdSort"
                asp-route-currentFilter="@Model.CurrentFilter">
                @Html.DisplayNameFor(model => model.Groups[0].GroupType)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.GroupLeaderSort"
                asp-route-currentFilter="@Model.CurrentFilter">
                @Html.DisplayNameFor(model => model.Groups[0].Leader)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Groups) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupType.Name)
            </td>
            <td>
                <a asp-page="/Administration/User/LeaderEdit" asp-route-id="@item.Leader.Id">@Html.DisplayFor(modelItem => item.Leader.FName)</a>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Rediger</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detaljer</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Slet</a>
            </td>
        </tr>
}
    </tbody>
</table>

@{
    var prevDisabled = !Model.Groups.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Groups.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Groups.PageIndex - 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @prevDisabled">
    Previous
</a>

<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Groups.PageIndex + 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @nextDisabled">
    Next

</a>
