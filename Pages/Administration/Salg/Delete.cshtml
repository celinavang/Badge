@page
@model Badge.Pages.Administration.SalesAdmin.DeleteModel

@{
    ViewData["Title"] = "Slet";
}

<h1>Slet</h1>

<h3>Er du sikker på, at du vil slette dette salg?</h3>
<div>
    <h4>Salg</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sale.Ticket)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sale.Ticket.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sale.Seller)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sale.Seller.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sale.Channel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sale.Channel.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sale.PaymentCollected)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sale.PaymentCollected)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sale.SalesDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sale.SalesDate)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Sale.Id" />
        <input type="submit" value="Slet" class="btn btn-danger" /> |
        <a asp-page="./Index">Tilbage til liste</a>
    </form>
</div>
