                                <div class="srtarw inactdwn"></div>
                            }
                        </div>
                    </div>
                </a>
            </th>
            <th>
                <a class="index-th-a" asp-page="./Index" asp-route-sortOrder="@Model.SalesDateSort" asp-route-view="">
                    <div class="srt-container">
                        <div class="srthead-container">
                            @Html.DisplayNameFor(model => model.Sales[0].SalesDate)
                        </div>
                        <div class="srtarw-container">
                            @if (Model.CurrentSort != null && Model.CurrentSort.Contains("SalesDate"))
                            {
                                if (Model.CurrentSort.Contains("asc"))
                                {
                                    <div class="srtarw actup"></div>
                                    <div class="srtarw inactdwn"></div>
                                }
                                else
                                {
                                    <div class="srtarw inactup"></div>
                                    <div class="srtarw actdwn"></div>
                                }
                            }
                            else
                            {
                                <div class="srtarw inactup"></div>
                                <div class="srtarw inactdwn"></div>
                            }
                        </div>
                    </div>
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Sales) {
        <tr>
            <td>
                    <a asp-page="/Administration/Lodsedler/Details" asp-route-id="@item.Ticket.Id">@Html.DisplayFor(modelItem => item.Ticket.Id)</a>
            </td>
            <td>
                    <a asp-page="/Administration/Medlem/Details" asp-route-id="@item.Seller.Id">@Html.DisplayFor(modelitem => item.Seller.FullName)</a>

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Channel.Name)
            </td>
            <td>
                    @if (item.PaymentCollected)
                    {
                        <div class="note-block note-green">Betalt</div>
                    } else
                    {
                        <div class="note-block note-red">Ikke betalt</div>
                    }
                </td>
            <td>
                @item.SalesDate.ToShortDateString()
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Rediger</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detaljer</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Slet</a>
            </td>
        </tr>
}
    </tbody>
</table>

@{
    var prevDisabled = !Model.Sales.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Sales.HasNextPage ? "disabled" : "";
}

@if (Model.Sales.HasPreviousPage)
{


    <a asp-page="./Index"
    asp-route-sortOrder="@Model.CurrentSort"
    asp-route-pageIndex="@(Model.Sales.PageIndex - 1)"
    asp-route-currentFilter="@Model.CurrentFilter"
    class="btn btn-primary @prevDisabled">
        Forrige
    </a>
}

@if (Model.Sales.HasPreviousPage)
{
    <a asp-page="./Index"
    asp-route-sortOrder="@Model.CurrentSort"
    asp-route-pageIndex="@(Model.Sales.PageIndex + 1)"
    asp-route-currentFilter="@Model.CurrentFilter"
    class="btn btn-primary @nextDisabled">
        Næste

    </a>
}
