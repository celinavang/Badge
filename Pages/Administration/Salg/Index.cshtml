@page
@model Badge.Pages.Administration.SalesAdmin.IndexModel

@{
    ViewData["Title"] = "Salg";
}
<div class="row" style="width:100%; padding:0; margin:0;">
    <div class="col-7" style="margin: 0; padding: 0;">
        <h1>Salg</h1>
    </div>
    <div class="col-2" style="margin-right:0; margin-left:auto; padding:0; width:10%;">
        <a asp-page="Create" >
            <button style="margin:auto; margin-right: 0; width:100%;" class="btn btn-primary">Opret</button>
        </a>
    </div>
</div>


<div class="row" style="width:100%; padding:0; margin:0;">

    <form asp-page="./Index" method="get" style="padding:0; margin:0;">
        <div class="form-actions no color">
            <p style="padding:0; margin:0;">

                <div style="width:90%; height:40px; padding:0; margin:0;float:left;">
                    <input name="SearchString" value="@Model.CurrentFilter" style="width:100%; height:100%; margin:0; padding-left: 20px; border:none; border-radius: 5px 0 0 5px;" type="text" name="SearchString" value="" />
                </div>
                <div style="width:10%; height:40px; padding:0 ; margin:0; float:right;">
                    <input style="width:100%; height:100%; margin:0px; border:none; border-radius:0 5px 5px 0; " type="submit" value="Søg" class="btn btn-primary" />
                </div>
            </p>
        </div>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                 <a asp-page="./Index" asp-route-sortOrder="@Model.TicketSort"
                asp-route-currrentFilter="@Model.CurrentFilter">
                @Html.DisplayNameFor(model => model.Sales[0].Ticket)
                </a>
            </th>
            <th>
                 <a asp-page="./Index" asp-route-sortOrder="@Model.SellerSort"
                asp-route-currrentFilter="@Model.CurrentFilter">
                @Html.DisplayNameFor(model => model.Sales[0].Seller)
                </a>
            </th>
            <th>
                 <a asp-page="./Index" asp-route-sortOrder="@Model.ChannelSort"
                asp-route-currrentFilter="@Model.CurrentFilter">
                @Html.DisplayNameFor(model => model.Sales[0].Channel.Name)
                </a>
            </th>
            <th>
                 <a asp-page="./Index" asp-route-sortOrder="@Model.PaymentCollectedSort"
                asp-route-currrentFilter="@Model.CurrentFilter">
                @Html.DisplayNameFor(model => model.Sales[0].PaymentCollected)
                </a>
            </th>
            <th>
                 <a asp-page="./Index" asp-route-sortOrder="@Model.SalesDateSort"
                asp-route-currrentFilter="@Model.CurrentFilter">
                @Html.DisplayNameFor(model => model.Sales[0].SalesDate)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Sales) {
        <tr>
            <td>
                    <a asp-page="/Administration/Lodsedler/Details" asp-route-id="@item.Ticket.Id">@Html.DisplayFor(modelItem => item.Ticket.Id)</a>
            </td>
            <td>
                    <a asp-page="/Administration/Medlem/Details" asp-route-id="@item.Seller.Id">@Html.DisplayFor(modelitem => item.Seller.FullName)</a>

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Channel.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentCollected)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Rediger</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detaljer</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Slet</a>
            </td>
        </tr>
}
    </tbody>
</table>

@{
    var prevDisabled = !Model.Sales.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Sales.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Sales.PageIndex - 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @prevDisabled">
    Previous
</a>

<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Sales.PageIndex + 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @nextDisabled">
    Next

</a>
