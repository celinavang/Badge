@page
@model Badge.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = Badge.Areas.Identity.Pages.Account.Manage.ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
@*<partial name="_StatusMessage" for="StatusMessage" />*@
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.FName" class="form-control" placeholder="Skriv venligts dit fornavn. "  />
                <label asp-for="Input.FName" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.LName" class="form-control" placeholder="Skriv venligts dit efternavn. " />
                <label asp-for="Input.LName" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Indtast venligst dit telefonnummer."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Gem</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
