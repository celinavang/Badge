@page "/login"
@model LoginModel

@{
    ViewData["Title"] = "Log ind";
    Layout = "_IndexLayout";
}
<div class="login-container-main">
    <div class="logo-container">
        <img src="/images/logo.png" />
    </div>
    <div class="row">
        <div style="text-align:center;">
                <form id="account" method="post">
                    <h2>Velkommen tilbage!</h2>
                    <br />
                    <div asp-validation-summary="ModelOnly" style="list-style:none!important"; class="text-danger" role="alert"></div>
                    <div style="margin-bottom:10px;">
                        @if (ViewData.ModelState.ContainsKey("NotMember"))
                        {
                            <p class="text-danger">Hov! Du har vidst ikke en medlems konto. <a class="text-danger" asp-page="./Login" asp-route-usertype="Leader">Vil du logge ind som leder?</a></p>
                        }
                        @if (ViewData.ModelState.ContainsKey("NotLeader"))
                        {
                            <p class="text-danger">Hov! Du har vidst ikke en leder konto. <a class="text-danger" asp-page="./Login" asp-route-usertype="Member">Vil du logge ind som medlem?</a></p>
                        }
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">E-mail</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Adgangskode</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Husk mig?
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color:#5F8CB4; font-family: Signika; font-weight: bold; border-width:0;">Log ind</button>
                    </div>
                    <div>
                        <p>
                            <a style="color: #5F8CB4;" id="forgot-password" asp-page="./ForgotPassword">Glemt adgangskode?</a>
                        </p>

                </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
